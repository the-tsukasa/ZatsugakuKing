<?xml version="1.0" encoding="utf-8"?>
<!-- Chip 风格：状态标签，非主要操作，描边与文案弱化 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@color/manga_chip" />
    <stroke
        android:width="1dp"
        android:color="@color/manga_border" />
    <corners android:radius="12dp" />
    <padding
        android:bottom="6dp"
        android:left="12dp"
        android:right="12dp"
        android:top="6dp" />
</shape>
