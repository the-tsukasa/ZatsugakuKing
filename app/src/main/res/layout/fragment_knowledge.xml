<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="110dp"
            android:background="@drawable/bg_knowledge_header">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/knowledge_header_title"
                    android:textAppearance="@style/AppTextTitle"
                    android:textColor="@color/manga_ink" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/knowledge_header_subtitle"
                    android:textAppearance="@style/AppTextBody"
                    android:textColor="@color/manga_ink_secondary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_rank_badge"
                    android:text="@string/knowledge_header_badge"
                    android:textAppearance="@style/AppBadge"
                    android:textColor="@color/manga_ink_secondary" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/knowledge_title"
                android:textAppearance="@style/AppTextSection"
                android:textColor="@color/manga_ink" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="@string/knowledge_section_hint"
                android:textAppearance="@style/AppTextCaption"
                android:textColor="@color/manga_ink_secondary" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                style="@style/AppCard">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/knowledge_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:padding="12dp"
                    tools:listitem="@layout/item_knowledge" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/knowledge_tips_title"
                android:textAppearance="@style/AppTextSection"
                android:textColor="@color/manga_ink" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:background="@drawable/bg_genre_block"
                android:padding="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/knowledge_tip_1"
                    android:textAppearance="@style/AppTextCaption"
                    android:textColor="@color/manga_ink" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/knowledge_tip_2"
                    android:textAppearance="@style/AppTextCaption"
                    android:textColor="@color/manga_ink" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/knowledge_tip_3"
                    android:textAppearance="@style/AppTextCaption"
                    android:textColor="@color/manga_ink" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
