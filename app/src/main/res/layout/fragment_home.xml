<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Hero 区域：渐变背景 + 标题 + 副标题 + 主 CTA -->
            <FrameLayout
                android:id="@+id/home_hero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="140dp"
                android:background="@drawable/bg_knowledge_header">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="24dp"
                    android:paddingBottom="20dp">

                    <TextView
                        android:id="@+id/titleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/app_title"
                        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                        android:textColor="@color/manga_ink"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/subtitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="center"
                        android:text="@string/app_subtitle"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/manga_ink_secondary" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/homeStartButton"
                        style="@style/Widget.Material3.Button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:minHeight="56dp"
                        android:text="@string/start_quiz"
                        android:textSize="16sp"
                        app:cornerRadius="12dp" />
                </LinearLayout>
            </FrameLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/rankTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/bg_rank_badge"
                    android:gravity="center"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="6dp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="現在の称号: 初心者" />

            <!-- 经验条：独立组件（黄条仅限组件内部），右侧等级/头像位 -->
            <LinearLayout
                android:id="@+id/home_exp_bar_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rankTitleText">

                <!-- 经验条封装组件：蓝底 + 黄条子 View（宽度按 currentExp/maxExp）+ 外框限制 -->
                <com.example.kadai09_pi12a_23.ExpBarView
                    android:id="@+id/home_exp_bar_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <!-- 右侧：等级/头像 icon 预留空间 -->
                <ImageView
                    android:id="@+id/home_exp_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="8dp"
                    android:contentDescription="@null"
                    android:visibility="visible"
                    tools:src="@drawable/avatar_default" />

                <TextView
                    android:id="@+id/home_exp_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:minWidth="72dp"
                    android:gravity="end"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    tools:text="0 / 50 EXP" />
            </LinearLayout>

            <TextView
                android:id="@+id/genreSelectLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/genre_select_label"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="?attr/colorOnSurface"
                app:layout_constraintTop_toBottomOf="@id/home_exp_bar_container" />

            <GridLayout
                android:id="@+id/genreGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:columnCount="2"
                android:rowCount="4"
                android:alignmentMode="alignBounds"
                android:useDefaultMargins="true"
                app:layout_constraintTop_toBottomOf="@id/genreSelectLabel">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/genreBlockAll"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="8dp"
                    android:minHeight="56dp"
                    android:text="@string/genre_all"
                    android:textSize="15sp"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/genreBlockJapan"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="6dp"
                    android:layout_marginBottom="8dp"
                    android:minHeight="56dp"
                    android:text="@string/genre_japan"
                    android:textSize="15sp"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/genreBlockWorld"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="8dp"
                    android:minHeight="56dp"
                    android:text="@string/genre_world"
                    android:textSize="15sp"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/genreBlockIt"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="6dp"
                    android:layout_marginBottom="8dp"
                    android:minHeight="56dp"
                    android:text="@string/genre_it"
                    android:textSize="15sp"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/genreBlockAnimeGame"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="8dp"
                    android:minHeight="56dp"
                    android:text="@string/genre_anime_game"
                    android:textSize="15sp"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/genreBlockFood"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="6dp"
                    android:layout_marginBottom="8dp"
                    android:minHeight="56dp"
                    android:text="@string/genre_food"
                    android:textSize="15sp"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/genreBlockHistory"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="2"
                    android:layout_marginBottom="8dp"
                    android:minHeight="56dp"
                    android:text="@string/genre_history"
                    android:textSize="15sp"
                    app:cornerRadius="12dp" />
            </GridLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
