<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:clipToPadding="false"
        android:paddingBottom="72dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Hero 区域：简洁色块 + 标题 + 副标题 + 主 CTA -->
            <FrameLayout
                android:id="@+id/home_hero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="120dp"
                android:background="@drawable/bg_knowledge_header">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="16dp">

                    <TextView
                        android:id="@+id/titleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/app_title"
                        android:textAppearance="@style/AppTextTitle"
                        android:textColor="@color/manga_ink" />

                    <TextView
                        android:id="@+id/subtitleText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:gravity="center"
                        android:text="@string/app_subtitle"
                        android:textAppearance="@style/AppTextBody"
                        android:textColor="@color/manga_ink_secondary" />
                </LinearLayout>
            </FrameLayout>

            <!-- 称号 + 经验条（Hero の直下・方案 A） -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/rankTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/bg_rank_badge"
                    android:gravity="center"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textAppearance="@style/AppBadge"
                    tools:text="現在の称号: 初心者" />

                <LinearLayout
                    android:id="@+id/home_exp_bar_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.example.kadai09_pi12a_23.ExpBarView
                        android:id="@+id/home_exp_bar_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/home_exp_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:contentDescription="@null"
                        android:visibility="visible"
                        tools:src="@drawable/avatar_student_default" />

                    <TextView
                        android:id="@+id/home_exp_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:minWidth="72dp"
                        android:gravity="end"
                        android:textAppearance="@style/AppTextCaption"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        tools:text="0 / 50 EXP" />
                </LinearLayout>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/genreSelectLabel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:text="@string/genre_select_label"
                android:textAppearance="@style/AppTextSection"
                android:textColor="?attr/colorOnSurface"
                app:layout_constraintTop_toTopOf="parent" />

            <GridLayout
                android:id="@+id/genreGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:columnCount="2"
                android:rowCount="4"
                android:alignmentMode="alignBounds"
                android:useDefaultMargins="true"
                app:layout_constraintTop_toBottomOf="@id/genreSelectLabel">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/genreBlockAll"
                    style="@style/AppButtonSecondary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="8dp"
                    android:minHeight="48dp"
                    android:text="@string/genre_all"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/genreBlockJapan"
                    style="@style/AppButtonSecondary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="6dp"
                    android:layout_marginBottom="8dp"
                    android:minHeight="48dp"
                    android:text="@string/genre_japan"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/genreBlockWorld"
                    style="@style/AppButtonSecondary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="8dp"
                    android:minHeight="48dp"
                    android:text="@string/genre_world"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/genreBlockHistory"
                    style="@style/AppButtonSecondary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="6dp"
                    android:layout_marginBottom="8dp"
                    android:minHeight="48dp"
                    android:text="@string/genre_history"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/genreBlockAnimeGame"
                    style="@style/AppButtonSecondary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="8dp"
                    android:minHeight="48dp"
                    android:text="@string/genre_anime_game"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/genreBlockFood"
                    style="@style/AppButtonSecondary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginStart="6dp"
                    android:layout_marginBottom="8dp"
                    android:minHeight="48dp"
                    android:text="@string/genre_food"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/genreBlockIt"
                    style="@style/AppButtonSecondary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnSpan="2"
                    android:layout_columnWeight="2"
                    android:layout_marginBottom="8dp"
                    android:minHeight="48dp"
                    android:text="@string/genre_it"
                    app:cornerRadius="12dp" />
            </GridLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 底部：应用特点，避免底部过于空旷 -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                style="@style/AppCard">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_feature_title"
                        android:textAppearance="@style/AppTextSection"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/main_feature_1"
                        android:textAppearance="@style/AppTextCaption"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/main_feature_2"
                        android:textAppearance="@style/AppTextCaption"
                        android:textColor="?attr/colorOnSurfaceVariant" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="@string/main_feature_3"
                        android:textAppearance="@style/AppTextCaption"
                        android:textColor="?attr/colorOnSurfaceVariant" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- 最下部：メイン CTA（クイック挑戦） -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/homeStartButton"
                style="@style/AppButtonPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="64dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="80dp"
                android:text="@string/home_start_button"
                android:textSize="22sp"
                app:cornerRadius="14dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
