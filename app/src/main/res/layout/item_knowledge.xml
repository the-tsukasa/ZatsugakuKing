<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_genre_block"
    android:minHeight="72dp"
    android:paddingHorizontal="12dp"
    android:paddingVertical="10dp">

    <TextView
        android:id="@+id/item_knowledge_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/AppTextBody"
        android:textColor="@color/manga_ink"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/item_knowledge_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="日本" />

    <TextView
        android:id="@+id/item_knowledge_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textAppearance="@style/AppTextCaption"
        android:textColor="@color/manga_ink_secondary"
        app:layout_constraintEnd_toStartOf="@id/item_knowledge_arrow"
        app:layout_constraintStart_toStartOf="@id/item_knowledge_title"
        app:layout_constraintTop_toBottomOf="@id/item_knowledge_title"
        tools:text="日本の地理、文化、暮らしの豆知識" />

    <TextView
        android:id="@+id/item_knowledge_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_rank_badge"
        android:paddingHorizontal="10dp"
        android:paddingVertical="4dp"
        android:textAppearance="@style/AppBadge"
        android:textColor="@color/manga_ink_secondary"
        app:layout_constraintStart_toStartOf="@id/item_knowledge_title"
        app:layout_constraintTop_toBottomOf="@id/item_knowledge_desc"
        tools:text="おすすめ" />

    <TextView
        android:id="@+id/item_knowledge_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="›"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        android:textColor="@color/manga_ink_secondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="?attr/colorOutlineVariant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_knowledge_badge" />
</androidx.constraintlayout.widget.ConstraintLayout>
