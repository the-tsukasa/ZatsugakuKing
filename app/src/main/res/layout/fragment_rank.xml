<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <!-- 标题区 -->
    <TextView
        android:id="@+id/rank_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:paddingTop="24dp"
        android:text="@string/rank_title"
        android:textAppearance="@style/AppTextTitle"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rank_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="6dp"
        android:text="@string/rank_subtitle"
        android:textAppearance="@style/AppTextCaption"
        android:textColor="?attr/colorOnSurfaceVariant"
        app:layout_constraintTop_toBottomOf="@id/rank_header_title" />

    <!-- マイスコア摘要卡片 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/rank_my_score_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="?attr/colorPrimaryContainer"
        app:cardCornerRadius="16dp"
        app:cardElevation="1dp"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toBottomOf="@id/rank_subtitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rank_my_score"
                    android:textAppearance="@style/AppTextCaption"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:alpha="0.8" />
                <TextView
                    android:id="@+id/rank_my_score_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textAppearance="@style/AppTextSection"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    tools:text="42 問正解" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rank_position_label"
                    android:textAppearance="@style/AppTextCaption"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:alpha="0.8" />
                <TextView
                    android:id="@+id/rank_my_rank_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textAppearance="@style/AppTextSection"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    tools:text="第5位" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/rank_current"
                    android:textAppearance="@style/AppTextCaption"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:alpha="0.8" />
                <TextView
                    android:id="@+id/rank_my_title_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textAppearance="@style/AppTextBody"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    tools:text="雑学見習い" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- 排行榜卡片容器：RecyclerView 单独滚动，可完整显示全部排名 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/rank_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        style="@style/AppCard"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rank_my_score_card"
        app:strokeWidth="0dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rank_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingHorizontal="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            tools:listitem="@layout/item_rank" />
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>
