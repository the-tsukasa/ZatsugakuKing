<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:paddingHorizontal="20dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    tools:context=".QuizActivity">

    <!-- ç”¨æˆ·å¤´åƒ + ç­‰çº§ãƒ»ç§°å· -->
    <LinearLayout
        android:id="@+id/quiz_user_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/quiz_user_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_avatar_circle"
            android:contentDescription="@string/profile_avatar"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar_student_default" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <!-- 1ï¸âƒ£ ç»éªŒæ¡åŒºåŸŸï¼šLv+ç§°å·ä¸€è¡Œ â†’ è¿›åº¦æ¡ â†’ EXP æ•°å­— â†’ å‡çº§æç¤º -->
            <TextView
                android:id="@+id/quiz_user_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/AppTextSection"
                android:textColor="?attr/colorPrimary"
                tools:text="Lv.4 é›‘å­¦å¥½ã" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ProgressBar
                    android:id="@+id/quiz_exp_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="10dp"
                    android:layout_marginEnd="8dp"
                    android:max="100"
                    android:progress="64"
                    android:progressDrawable="@drawable/bg_exp_progress"
                    android:indeterminate="false" />

                <TextView
                    android:id="@+id/quiz_exp_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="72dp"
                    android:gravity="end"
                    android:textAppearance="@style/AppTextCaption"
                    android:textColor="@color/manga_ink_secondary"
                    tools:text="320 / 500 EXP" />
            </LinearLayout>

            <!-- 2ï¸âƒ£ æ˜Žç¡®æç¤ºï¼šã‚ã¨ X å•ã§ Lv.Yï¼ -->
            <TextView
                android:id="@+id/quiz_exp_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_chip"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:textAppearance="@style/AppBadge"
                android:textColor="?attr/colorPrimary"
                android:visibility="gone"
                tools:text="ã‚ã¨ 3 å•ã§ Lv.5ï¼"
                tools:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/headerRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/quiz_user_bar">

        <TextView
            android:id="@+id/progressText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="@style/AppTextCaption"
            android:textColor="@color/manga_ink_secondary"
            tools:text="ç¬¬1å• / 5" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/AppTextCaption"
            android:textColor="@color/manga_ink_secondary"
            tools:text="æ­£ç­”æ•°: 0" />
    </LinearLayout>

    <!-- çµæžœã‚¨ãƒªã‚¢ï¼ˆã‚¯ã‚¤ã‚ºçµ‚äº†æ™‚ã®ã¿è¡¨ç¤ºï¼‰ -->
    <LinearLayout
        android:id="@+id/quiz_result_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerRow">

        <TextView
            android:id="@+id/quiz_result_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/quiz_complete_text"
            android:textAppearance="@style/AppTextTitle"
            android:textColor="?attr/colorOnSurface"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quiz_result_correct_rate"
                android:textAppearance="@style/AppTextCaption"
                android:textColor="?attr/colorOnSurfaceVariant" />
            <TextView
                android:id="@+id/quiz_result_correct_rate_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textAppearance="@style/AppTextSection"
                android:textColor="?attr/colorOnSurface"
                tools:text="80%" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quiz_result_exp_gained"
                android:textAppearance="@style/AppTextCaption"
                android:textColor="?attr/colorOnSurfaceVariant" />
            <TextView
                android:id="@+id/quiz_result_exp_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textAppearance="@style/AppTextSection"
                android:textColor="?attr/colorOnSurface"
                tools:text="+50 EXP" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quiz_result_max_consecutive"
                android:textAppearance="@style/AppTextCaption"
                android:textColor="?attr/colorOnSurfaceVariant" />
            <TextView
                android:id="@+id/quiz_result_consecutive_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textAppearance="@style/AppTextSection"
                android:textColor="?attr/colorOnSurface"
                tools:text="3å•" />
        </LinearLayout>
        <TextView
            android:id="@+id/quiz_result_eval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/AppTextSection"
            android:textColor="?attr/colorPrimary"
            tools:text="ã™ã”ã„ï¼ðŸ‘" />
    </LinearLayout>

    <TextView
        android:id="@+id/questionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/AppTextSection"
        android:textColor="@color/manga_ink"
        android:lineSpacingMultiplier="1.25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerRow"
        tools:text="å•é¡Œæ–‡ãŒè¡¨ç¤ºã•ã‚Œã¾ã™" />

    <RadioGroup
        android:id="@+id/answerGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/questionText">

        <RadioButton
            android:id="@+id/option1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@drawable/bg_option_pill"
            android:buttonTint="@color/manga_accent"
            android:paddingStart="12dp"
            android:paddingTop="10dp"
            android:paddingEnd="12dp"
            android:paddingBottom="10dp"
            android:text="Option 1"
            android:textColor="@color/manga_ink"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/option2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@drawable/bg_option_pill"
            android:buttonTint="@color/manga_accent"
            android:paddingStart="12dp"
            android:paddingTop="10dp"
            android:paddingEnd="12dp"
            android:paddingBottom="10dp"
            android:text="Option 2"
            android:textColor="@color/manga_ink"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/option3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@drawable/bg_option_pill"
            android:buttonTint="@color/manga_accent"
            android:paddingStart="12dp"
            android:paddingTop="10dp"
            android:paddingEnd="12dp"
            android:paddingBottom="10dp"
            android:text="Option 3"
            android:textColor="@color/manga_ink"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/option4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_option_pill"
            android:buttonTint="@color/manga_accent"
            android:paddingStart="12dp"
            android:paddingTop="10dp"
            android:paddingEnd="12dp"
            android:paddingBottom="10dp"
            android:text="Option 4"
            android:textColor="@color/manga_ink"
            android:textSize="14sp" />
    </RadioGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/answerButton"
        style="@style/AppButtonPrimary"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:text="@string/answer_button"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/answerGroup" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/exitButton"
        style="@style/AppButtonSecondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/quiz_exit_button"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/answerButton" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/retryButton"
        style="@style/AppButtonSecondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/quiz_retry_button"
        android:visibility="gone"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/quiz_result_container" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/topButton"
        style="@style/AppButtonSecondary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/top_button"
        android:visibility="gone"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/retryButton" />

    <!-- å›žç­”åˆ¤å®šï¼šä¸­å¤®ã‚ªãƒ¼ãƒãƒ¼ãƒ¬ã‚¤ï¼ˆToast ã®ä»£ã‚ã‚Šï¼‰ -->
    <FrameLayout
        android:id="@+id/quiz_feedback_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:elevation="12dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/quiz_feedback_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingStart="32dp"
            android:paddingEnd="32dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@drawable/bg_feedback_correct"
            tools:background="@drawable/bg_feedback_correct">

            <TextView
                android:id="@+id/quiz_feedback_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:text="æ­£è§£ï¼" />

            <TextView
                android:id="@+id/quiz_feedback_exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:visibility="gone"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                tools:text="+10 EXP"
                tools:visibility="visible" />
        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
