<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    tools:context=".QuizActivity">

    <!-- 用户头像 + 等级・称号 -->
    <LinearLayout
        android:id="@+id/quiz_user_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/quiz_user_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_avatar_circle"
            android:contentDescription="@string/profile_avatar"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar_default" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:orientation="vertical">

            <!-- 1️⃣ 经验条区域：Lv+称号一行 → 进度条 → EXP 数字 → 升级提示 -->
            <TextView
                android:id="@+id/quiz_user_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                tools:text="Lv.4 雑学好き" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ProgressBar
                    android:id="@+id/quiz_exp_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="10dp"
                    android:layout_marginEnd="8dp"
                    android:max="100"
                    android:progress="64"
                    android:progressDrawable="@drawable/bg_exp_progress"
                    android:indeterminate="false" />

                <TextView
                    android:id="@+id/quiz_exp_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="72dp"
                    android:gravity="end"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="@color/manga_ink_secondary"
                    tools:text="320 / 500 EXP" />
            </LinearLayout>

            <!-- 2️⃣ 明确提示：あと X 問で Lv.Y！ -->
            <TextView
                android:id="@+id/quiz_exp_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_chip"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="あと 3 問で Lv.5！"
                tools:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/headerRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/quiz_user_bar">

        <TextView
            android:id="@+id/progressText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="@color/manga_ink_secondary"
            tools:text="第1問 / 5" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="@color/manga_ink_secondary"
            tools:text="正答数: 0" />
    </LinearLayout>

    <TextView
        android:id="@+id/questionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
        android:textColor="@color/manga_ink"
        android:lineSpacingMultiplier="1.25"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerRow"
        tools:text="問題文が表示されます" />

    <RadioGroup
        android:id="@+id/answerGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/questionText">

        <RadioButton
            android:id="@+id/option1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@drawable/bg_option_pill"
            android:buttonTint="@color/manga_accent"
            android:paddingStart="12dp"
            android:paddingTop="10dp"
            android:paddingEnd="12dp"
            android:paddingBottom="10dp"
            android:text="Option 1"
            android:textColor="@color/manga_ink"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/option2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@drawable/bg_option_pill"
            android:buttonTint="@color/manga_accent"
            android:paddingStart="12dp"
            android:paddingTop="10dp"
            android:paddingEnd="12dp"
            android:paddingBottom="10dp"
            android:text="Option 2"
            android:textColor="@color/manga_ink"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/option3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:background="@drawable/bg_option_pill"
            android:buttonTint="@color/manga_accent"
            android:paddingStart="12dp"
            android:paddingTop="10dp"
            android:paddingEnd="12dp"
            android:paddingBottom="10dp"
            android:text="Option 3"
            android:textColor="@color/manga_ink"
            android:textSize="14sp" />

        <RadioButton
            android:id="@+id/option4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_option_pill"
            android:buttonTint="@color/manga_accent"
            android:paddingStart="12dp"
            android:paddingTop="10dp"
            android:paddingEnd="12dp"
            android:paddingBottom="10dp"
            android:text="Option 4"
            android:textColor="@color/manga_ink"
            android:textSize="14sp" />
    </RadioGroup>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/answerButton"
        style="@style/Widget.Material3.Button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:text="@string/answer_button"
        android:textSize="15sp"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/answerGroup" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/resetButton"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:minHeight="48dp"
        android:text="@string/reset_button"
        android:textSize="14sp"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/answerButton" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/topButton"
        style="@style/Widget.Material3.Button.TonalButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:minHeight="48dp"
        android:text="@string/top_button"
        android:textSize="14sp"
        android:visibility="gone"
        app:cornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/resetButton" />

</androidx.constraintlayout.widget.ConstraintLayout>
